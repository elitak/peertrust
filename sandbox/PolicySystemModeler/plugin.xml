<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="org.peertrust.modeler.policysystem.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Policysystem Perspective"
            class="org.peertrust.modeler.policysystem.Perspective"
            id="org.peertrust.modeler.policysystem.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="policysystem"
            name="policy system view"/>
      <view
            category="policysystem"
            class="org.peertrust.modeler.policysystem.views.PolicySystemView"
            icon="icons/sample.gif"
            id="org.peertrust.modeler.policysystem.views.PolicySystemView"
            name="PolicySystemView"/>
      <category
            id="policy system view"
            name="policy system view"/>
      <view
            category="policy system view"
            class="org.peertrust.modeler.policysystem.views.PolicySystemGraphView"
            icon="icons/sample.gif"
            id="org.peertrust.modeler.policysystem.views.PolicySystemGraphView"
            name="Policy System Graph View"/>
      <view
            class="org.peertrust.modeler.policysystem.views.MesgView"
            id="org.peertrust.modeler.policysystem.MesgView"
            name="policysystem.MesgView"/>
      <view
            class="org.peertrust.modeler.policysystem.views.WarningsView"
            id="org.peertrust.modeler.policysystem.WarningsView"
            name="policysystem.WarningsView"/>
      <view
            class="org.peertrust.modeler.policysystem.views.PSResourceView"
            id="FileSystemView"
            name="FileSystemView"/>
      <view
            allowMultiple="false"
            class="org.peertrust.modeler.policysystem.views.ResourcePolicyView"
            id="org.peertrust.modeler.policysystem.ResourcePolicyView"
            name="policysystem.ResourcePolicyView"/>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension targetID="org.eclipse.ui.resourcePerspective">
         <view
               id="policysystem.views.PolicySystemView"
               ratio="0.5"
               relationship="right"
               relative="org.eclipse.ui.views.TaskList"/>
      </perspectiveExtension>
      <perspectiveExtension targetID="org.eclipse.ui.resourcePerspective">
         <view
               id="policysystem.views.PolicySystemGraphView"
               ratio="0.5"
               relationship="right"
               relative="org.eclipse.ui.views.TaskList"/>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.core.runtime.adapters">
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.peertrust.modeler.policysystem.editors.PSEditor"
            default="false"
            id="policysystem.editor1"
            name="policysystem.editor1"/>
   </extension>
   <extension
         id="policysystemID" 
         point="org.eclipse.core.runtime.products">
      <product
            application="policysystem.application"
            name="Policy System Modeler"/>
   </extension>

</plugin>
