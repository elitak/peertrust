<?xml version='1.0' encoding='ISO-8859-1'?>
<!DOCTYPE rdf:RDF [
        <!ENTITY rdf 'http://www.w3.org/1999/02/22-rdf-syntax-ns#'>
        <!ENTITY rdfs 'http://www.w3.org/2000/01/rdf-schema#'>
        <!ENTITY pt 'http://www.L3S.de/~olmedilla/policy/Vocabulary#'>
]>
<rdf:RDF xmlns:rdf="&rdf;" xmlns:rdfs="&rdfs;" xmlns:pt="&pt;">

 	<!-- ======================================================================
	Policy Engine
	================================================================== -->
	<pt:PolicyEngine rdf:about="&pt;PEngine">
		<pt:javaClass>org.policy.engine.PolicyEngineDistributor</pt:javaClass>
		<pt:eventDispatcher rdf:resource="#Dispatcher"/>
		<pt:handlerRegistry rdf:resource="#ServiceRegistry"/>
		<pt:communicationChannel rdf:resource="#CommChannel"/>
	</pt:PolicyEngine>

	<!-- ======================================================================
	Event Dispatcher
	================================================================== -->
	<pt:EventDispatcher rdf:about="#Dispatcher">
		<pt:javaClass>org.policy.event.ThreadedEventDispatcher</pt:javaClass>
		<pt:numberOfThreads>4</pt:numberOfThreads>
	</pt:EventDispatcher>

	<!-- ======================================================================
	Service Registry
	================================================================== -->
	<pt:PolicyHandlerRegistry rdf:about="#ServiceRegistry">
		<pt:javaClass>org.policy.engine.service.ServiceHandlerRegistryImpl</pt:javaClass>
		<pt:elements rdf:resource="#ServiceRegistryElements"/>
	</pt:PolicyHandlerRegistry>
	
	<rdf:Seq rdf:about="#ServiceRegistryElements">
		<rdf:li rdf:resource="#ServiceEntry1"/>
		<rdf:li rdf:resource="#ServiceEntry2"/>
	</rdf:Seq>
	
	<pt:ServiceHandlerEntry rdf:about="#ServiceEntry1">
		<pt:javaClass>org.policy.engine.service.ServiceHandlerRegistryEntry</pt:javaClass>
		<pt:handler rdf:resource="#PeerTrustHandler"/>
		<pt:engine rdf:resource="#PeerTrustEngine"/>
	</pt:ServiceHandlerEntry>
	
	<pt:ServiceHandlerEntry rdf:about="#ServiceEntry2">	
		<pt:javaClass>org.policy.engine.service.ServiceHandlerRegistryEntry</pt:javaClass>
		<pt:handler rdf:resource="#ProtuneHandler"/>
		<pt:engine rdf:resource="#ProtuneEngine"/>
	</pt:ServiceHandlerEntry>

	<pt:ServiceHandler rdf:about="#PeerTrustHandler">	
		<pt:javaClass>org.policy.peertrust.model.PeerTrustServiceHandler</pt:javaClass>
	</pt:ServiceHandler>

	<pt:ServiceHandler rdf:about="#ProtuneHandler">	
		<pt:javaClass>org.policy.protune.model.ProtuneServiceHandler</pt:javaClass>
	</pt:ServiceHandler>

	<!-- ======================================================================
	Communication Channel
	================================================================== -->
	<pt:CommunicationChannel rdf:about="#CommChannel">
		<pt:javaClass>org.policy.communication.net.socket.SimpleSocketFactory</pt:javaClass>
		<pt:dispatcher rdf:resource="#Dispatcher"/>
		<pt:host>localhost</pt:host>
		<pt:port>42000</pt:port>
	</pt:CommunicationChannel>

	<!-- ======================================================================
	Sub Policy Engines
	================================================================== -->
	<pt:ServiceHandler rdf:about="#PeerTrustEngine">	
		<pt:javaClass>org.policy.peertrust.engine.PeerTrustPolicyEngine</pt:javaClass>
	</pt:ServiceHandler>
		
	<pt:ServiceHandler rdf:about="#ProtuneEngine">	
		<pt:javaClass>org.policy.protune.engine.ProtunePolicyEngine</pt:javaClass>
	</pt:ServiceHandler>

</rdf:RDF>
